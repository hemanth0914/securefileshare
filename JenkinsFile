pipeline {
  agent {
    docker {
      image 'python:3.8'  // Specifies a more specific version of Python
    }
  }
stages {
    stage('Checkout') {
      steps {
        sh 'echo passed'
        //url: 'https://github.com/hemanth0914/securefileshare',
        //branch: 'main'
      }
    }
    stage('Setup') {
      steps {
        script {
          // Install Python dependencies
          sh 'pip install --user --upgrade pip' // Using --user to avoid permission issues
          sh 'pip install --user -r requirements.txt' // Install other packages as needed
        }
      }
    }
    stage('Static Code Analysis') {
      environment {
        SONAR_URL = "http://18.191.234.226:9000"
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}'
        }
      }
    }
 stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "hemanth0914/cicd-e2e:${BUILD_NUMBER}"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
            sh 'docker build -t ${DOCKER_IMAGE} .'
            def dockerImage = docker.image("${DOCKER_IMAGE}")
            docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                dockerImage.push()
            }
        }
      }
    }
stage('Update Deployment File') {
        environment {
            GIT_REPO_NAME = "securefileshare"
            GIT_USER_NAME = "hemanth0914"
        }
        steps {
            withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                sh '''
                    git config user.email "srisaihemanth2@gmail.com"
                    git config user.name "hemanth0914"
                    BUILD_NUMBER=${BUILD_NUMBER}
                    sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" manifests/deployment.yml
                    git add manifests/deployment.yml
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                    git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                '''
            }
        }
    }
  }
}